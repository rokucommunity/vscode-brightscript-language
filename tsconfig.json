{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "noImplicitAny": false,
        "removeComments": false,
        "noUnusedLocals": false,
        "noImplicitThis": true,
        "inlineSourceMap": false,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "dist",
        "preserveConstEnums": true,
        "strictNullChecks": false,
        "noUnusedParameters": false,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"]
}