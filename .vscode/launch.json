{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Extension",
			"preLaunchTask": "npm",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [ "${workspaceFolder}/out/**/*.js" ]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Server",
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/src/debugAdapter.ts",
            "args": [ "--server=4711" ],
            "timeout": 10000,
			"outFiles": [ "${workspaceFolder}/out/**/*.js" ],
			"stopOnEntry": false
        },
        {
			"type": "node",
			"request": "attach",
			"name": "Language Server",
			"port": 6009,
            "restart": true,
            "timeout": 30000,
			"outFiles": ["${workspaceRoot}/server/out/**/*.js"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Tests",
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-u", "tdd",
				"--timeout", "999999",
				"--colors",
				"./out/**/*.spec.js"
			],
			"outFiles": [ "${workspaceFolder}/out/**/*.js" ],
			"internalConsoleOptions": "openOnSessionStart"
		}
	],
	"compounds": [
		{
			"name": "Extension, Debug Server, Language Server",
			"configurations": [ "Extension", "Debug Server", "Language Server" ]
        },
        {
			"name": "Extension,Language Server",
			"configurations": [ "Extension", "Language Server" ]
		}
	]
}
