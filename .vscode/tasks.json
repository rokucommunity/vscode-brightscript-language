{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch",
                "--loglevel",
                "silent"
            ],
            "presentation": {
                "group": "watch",
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": {
                        "regexp": ""
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "\\[watch\\] build started"
                        },
                        "endsPattern": {
                            "regexp": "\\[watch\\] build finished"
                        }
                    }
                }
            ]
        },
        {
            "label": "watch-webviews",
            "type": "shell",
            "command": "npm run watch-webviews",
            "presentation": {
                "group": "watch",
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": {
                        "regexp": "^\\[!\\]"
                    },
                    "severity": "error"
                },
                {
                    "base": "$tsc-watch",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^build started\\.\\.\\.",
                        "endsPattern": "^built in \\d+"
                    }
                }
            ],
            "dependsOn": [
                "watch"
            ]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "npm run test:nocover --silent",
            "presentation": {
                "focus": true,
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "npm run clean",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "npm run build",
            "dependsOn": "clean",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "focus": true,
                "panel": "dedicated"
            }
        }
    ]
}