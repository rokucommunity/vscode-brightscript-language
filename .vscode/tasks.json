{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "watch",
                "--loglevel",
                "silent"
            ],
            "presentation": {
                "group": "watch",
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        }, {
            "label": "svelte-watch",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "svelte-watch"
            ],
            "presentation": {
                "group": "watch",
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true,
            "problemMatcher": [{
                "pattern": {
                    "regexp": "^\\[!\\]"
                },
                "severity": "error"
            }, {
                "base": "$tsc-watch",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\s*\\[\\d{1,2}:\\d{1,2}:\\d{1,2}(?: AM| PM)?\\] Validating project",
                    "endsPattern": "waiting for changes..."
                },
            }],
            "dependsOn": ["watch"]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "test:nocover",
                "--loglevel",
                "silent"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "npm",
            "script": "clean",
            "problemMatcher": [],
        },
        {
            "type": "npm",
            "label": "build",
            "script": "build",
            "dependsOn": "clean",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "type": "npm",
            "script": "test",
            "problemMatcher": []
        }
    ]
}
